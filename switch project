#include<stdio.h>
int main(){
    int x;
    printf("Currwently your circuit is off\n");
    printf("Enter your value of a \n");
    scanf("%d", &x);

    switch(x){
        case 1 :
        printf("Switch is on\n");
        break;

        case 0:
        printf("Switch is off\n");
        break;

        default:
        printf("Error!\n");
    }
    return 0;
}
   
